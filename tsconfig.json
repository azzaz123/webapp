{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "app/core/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@features/*": [
        "app/features/*"
      ],
      "@fixtures/*": [
        "tests/*"
      ],
      "@layout/*": [
        "app/layout/*"
      ],
      "@public/*": [
        "app/public/*"
      ],
      "@private/*": [
        "app/private/*"
      ],
      "@storybook-config/*": [
        "../.storybook/*"
      ],
      "@stories/*": [
        "stories/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    // BEFOREMERGE: https://stackoverflow.com/questions/56870661/angular-7-2-1-es6-class-referenceerror-cannot-access-x-before-initializatio
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
